<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditText
        android:id="@+id/usr_et_old_pas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:inputType="textPassword"
        android:hint="请输入原密码"
        android:minHeight="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <EditText
        android:id="@+id/usr_et_new_pas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:inputType="textPassword"
        android:hint="请输入新密码"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@id/usr_et_old_pas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/usr_et_cfm_pas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:inputType="textPassword"
        android:hint="请重新输入新密码"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@id/usr_et_new_pas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/usr_bt_pas_confirm"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/item_shape_fillet_orange"
        android:text="更改"
        android:textSize="16sp"
        android:textColor="@color/orange"
        android:layout_marginTop="15sp"
        app:layout_constraintEnd_toEndOf="@+id/usr_et_cfm_pas"
        app:layout_constraintStart_toStartOf="@+id/usr_et_cfm_pas"
        app:layout_constraintTop_toBottomOf="@+id/usr_et_cfm_pas" />

</androidx.constraintlayout.widget.ConstraintLayout>