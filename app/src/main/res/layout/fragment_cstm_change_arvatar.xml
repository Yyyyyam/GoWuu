<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/usr_iv_change_avatar"
        app:round="50dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/usr_bt_change_avatar"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/item_shape_fillet_orange"
        android:text="更改"
        android:textSize="16sp"
        android:textColor="@color/orange"
        android:layout_marginTop="25sp"
        app:layout_constraintEnd_toEndOf="@+id/usr_iv_change_avatar"
        app:layout_constraintStart_toStartOf="@+id/usr_iv_change_avatar"
        app:layout_constraintTop_toBottomOf="@+id/usr_iv_change_avatar" />

</androidx.constraintlayout.widget.ConstraintLayout>