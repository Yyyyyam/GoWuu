<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/admin_manage_et_name"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/home_search_shape"
        android:drawableEnd="@drawable/img_search_layer_list"
        android:textSize="16sp"
        android:hint="请输入搜索内容"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:paddingStart="10dp"
        android:paddingEnd="55dp"
        android:singleLine="true"
        android:maxLength="18"
        android:imeOptions="actionSearch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/admin_manage_bt_search"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="@drawable/button_changed_shape"
        android:text="搜索"
        android:layout_marginEnd="2dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/admin_manage_et_name"
        app:layout_constraintEnd_toEndOf="@id/admin_manage_et_name"
        app:layout_constraintTop_toTopOf="@id/admin_manage_et_name" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/admin_manage_rv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/admin_manage_et_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>