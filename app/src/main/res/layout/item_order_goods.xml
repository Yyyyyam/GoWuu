<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/itm_odr_iv_goods_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/item_shape_fillet"
        android:scaleType="fitXY"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/itm_odr_tv_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxEms="12"
        android:maxLines="1"
        android:text="商品名称，显示字符长度为12多余部分显示..."
        android:textSize="14sp"
        android:layout_marginStart="12dp"
        android:textColor="@color/goods_black"
        app:layout_constraintStart_toEndOf="@+id/itm_odr_iv_goods_img"
        app:layout_constraintTop_toTopOf="@+id/itm_odr_iv_goods_img" />

    <TextView
        android:id="@+id/itm_odr_tv_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8.80"
        android:textColor="@color/goods_black"
        android:textSize="14sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/itm_odr_tv_goods_name" />

    <TextView
        android:id="@+id/itm_odr_tv_rmb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥"
        android:textColor="@color/goods_black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/itm_odr_tv_goods_price"
        app:layout_constraintEnd_toStartOf="@+id/itm_odr_tv_goods_price" />

    <TextView
        android:id="@+id/itm_odr_tv_goods_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ems="12"
        android:text="1m;1条装【5A闪充DASH】 一加手机专用"
        android:textColor="@color/gray"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/itm_odr_tv_goods_name"
        app:layout_constraintTop_toBottomOf="@+id/itm_odr_tv_goods_name" />

    <TextView
        android:id="@+id/itm_odr_tv_goods_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/gray"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/itm_odr_tv_goods_price"
        app:layout_constraintTop_toTopOf="@+id/itm_odr_tv_goods_type" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/itm_odr_tv_goods_count"
        app:layout_constraintEnd_toStartOf="@id/itm_odr_tv_goods_count"
        app:layout_constraintTop_toTopOf="@id/itm_odr_tv_goods_count" />


    <Button
        android:id="@+id/itm_odr_bt_appraise"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/item_shape_fillet_orange"
        android:visibility="gone"
        android:text="发表评价"
        android:textColor="@color/orange"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/itm_odr_iv_goods_img"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>