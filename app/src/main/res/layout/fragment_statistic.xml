<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/admin_statistic_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单统计"
        android:textSize="24sp"
        android:textColor="@color/goods_black"
        android:layout_marginTop="120dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/admin_statistic_constraint_week"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:paddingBottom="16dp"
        android:background="@drawable/item_shape_fillet"
        app:layout_constraintTop_toBottomOf="@id/admin_statistic_tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/admin_statistic_week_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="近一周"
            android:textSize="17sp"
            android:textColor="@color/back_gray"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/admin_statistic_week_tv_dealt_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成交数量:0"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/admin_statistic_week_tv_title"
            app:layout_constraintStart_toStartOf="@id/admin_statistic_week_tv_title"/>
        
        <TextView
            android:id="@+id/admin_statistic_week_tv_dealt_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成交额度￥0"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/admin_statistic_week_tv_dealt_count"
            app:layout_constraintStart_toStartOf="@id/admin_statistic_week_tv_dealt_count"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/admin_statistic_guideline_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <TextView
            android:id="@+id/admin_statistic_week_tv_dealing_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易中数量:0"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/admin_statistic_week_tv_dealt_count"
            app:layout_constraintStart_toStartOf="@id/admin_statistic_guideline_week"/>

        <TextView
            android:id="@+id/admin_statistic_week_tv_dealing_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易中数量:0"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/admin_statistic_week_tv_dealt_money"
            app:layout_constraintStart_toStartOf="@id/admin_statistic_week_tv_dealing_count"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/admin_statistic_constraint_month"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:paddingBottom="16dp"
        android:background="@drawable/item_shape_fillet"
        app:layout_constraintTop_toBottomOf="@id/admin_statistic_constraint_week"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/admin_statistic_month_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="近一个月"
            android:textSize="17sp"
            android:textColor="@color/back_gray"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/admin_statistic_month_tv_dealt_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成交数量:0"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/admin_statistic_month_tv_title"
            app:layout_constraintStart_toStartOf="@id/admin_statistic_month_tv_title"/>

        <TextView
            android:id="@+id/admin_statistic_month_tv_dealt_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成交额度￥0"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/admin_statistic_month_tv_dealt_count"
            app:layout_constraintStart_toStartOf="@id/admin_statistic_month_tv_dealt_count"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/admin_statistic_guideline_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <TextView
            android:id="@+id/admin_statistic_month_tv_dealing_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易中数量:0"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/admin_statistic_month_tv_dealt_count"
            app:layout_constraintStart_toStartOf="@id/admin_statistic_guideline_month"/>

        <TextView
            android:id="@+id/admin_statistic_month_tv_dealing_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易中数量:0"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/admin_statistic_month_tv_dealt_money"
            app:layout_constraintStart_toStartOf="@id/admin_statistic_month_tv_dealing_count"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/admin_statistic_constraint_year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:paddingBottom="16dp"
        android:background="@drawable/item_shape_fillet"
        app:layout_constraintTop_toBottomOf="@id/admin_statistic_constraint_month"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/admin_statistic_year_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="近一年"
            android:textSize="17sp"
            android:textColor="@color/back_gray"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/admin_statistic_year_tv_dealt_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成交数量:0"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/admin_statistic_year_tv_title"
            app:layout_constraintStart_toStartOf="@id/admin_statistic_year_tv_title"/>

        <TextView
            android:id="@+id/admin_statistic_year_tv_dealt_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成交额度￥0"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/admin_statistic_year_tv_dealt_count"
            app:layout_constraintStart_toStartOf="@id/admin_statistic_year_tv_dealt_count"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/admin_statistic_guideline_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <TextView
            android:id="@+id/admin_statistic_year_tv_dealing_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易中数量:0"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/admin_statistic_year_tv_dealt_count"
            app:layout_constraintStart_toStartOf="@id/admin_statistic_guideline_year"/>

        <TextView
            android:id="@+id/admin_statistic_year_tv_dealing_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易中数量:0"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/admin_statistic_year_tv_dealt_money"
            app:layout_constraintStart_toStartOf="@id/admin_statistic_year_tv_dealing_count"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/admin_statistic_constraint_all"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:paddingBottom="16dp"
        android:background="@drawable/item_shape_fillet"
        app:layout_constraintTop_toBottomOf="@id/admin_statistic_constraint_year"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/admin_statistic_all_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总计"
            android:textSize="17sp"
            android:textColor="@color/back_gray"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/admin_statistic_all_tv_dealt_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成交数量:0"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/admin_statistic_all_tv_title"
            app:layout_constraintStart_toStartOf="@id/admin_statistic_all_tv_title"/>

        <TextView
            android:id="@+id/admin_statistic_all_tv_dealt_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成交额度￥0"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/admin_statistic_all_tv_dealt_count"
            app:layout_constraintStart_toStartOf="@id/admin_statistic_all_tv_dealt_count"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/admin_statistic_guideline_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <TextView
            android:id="@+id/admin_statistic_all_tv_dealing_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易中数量:0"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/admin_statistic_all_tv_dealt_count"
