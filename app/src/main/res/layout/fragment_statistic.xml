        <TextView
            android:id="@+id/admin_statistic_all_tv_dealing_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易中数量:0"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/admin_statistic_all_tv_dealt_money"
            app:layout_constraintStart_toStartOf="@id/admin_statistic_all_tv_dealing_count"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>