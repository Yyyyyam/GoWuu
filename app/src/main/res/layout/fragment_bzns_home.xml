<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/bzns_home_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginStart="24dp"
        android:text="天泰调味线上商城"
        android:textColor="@color/goods_black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bzns_home_constraint_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/item_shape_fillet"
        android:paddingBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bzns_home_tv_title">

        <TextView
            android:id="@+id/bzns_home_tv_score_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="综合评分"
            android:textSize="17sp"
            android:textColor="@color/back_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/bzns_home_tv_score1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="描述相符:5.0"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/bzns_home_tv_score_title"
            app:layout_constraintTop_toBottomOf="@id/bzns_home_tv_score_title" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bzns_home_score_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/bzns_home_tv_score2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="物流服务:5.0"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/bzns_home_score_guideline"
            app:layout_constraintTop_toTopOf="@id/bzns_home_tv_score1" />

        <TextView
            android:id="@+id/bzns_home_tv_score3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="服务态度:5.0"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/bzns_home_tv_score1"
            app:layout_constraintTop_toBottomOf="@id/bzns_home_tv_score1" />

        <TextView
            android:id="@+id/bzns_home_tv_violation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="违规次数:0"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/bzns_home_tv_score2"
            app:layout_constraintTop_toBottomOf="@+id/bzns_home_tv_score2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bzns_home_constraint_goods"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/item_shape_fillet"
        android:layout_marginTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/bzns_home_constraint_score"
        app:layout_constraintStart_toStartOf="@id/bzns_home_constraint_score"
        app:layout_constraintEnd_toEndOf="@id/bzns_home_constraint_score">

        <TextView
            android:id="@+id/bzns_home_tv_goods_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品相关"
            android:textSize="17sp"
            android:textColor="@color/back_gray"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/bzns_home_tv_goods_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品总数:100"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/bzns_home_tv_goods_title"
            app:layout_constraintStart_toStartOf="@id/bzns_home_tv_goods_title"/>

        <TextView
            android:id="@+id/bzns_home_tv_goods_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="折扣商品:100"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/bzns_home_tv_goods_count"
            app:layout_constraintStart_toStartOf="@id/bzns_home_goods_guideline"/>

        <TextView
            android:id="@+id/bzns_home_tv_goods_state1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上架商品:50"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/bzns_home_tv_goods_count"
            app:layout_constraintStart_toStartOf="@id/bzns_home_tv_goods_count"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bzns_home_goods_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/bzns_home_tv_goods_state2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下架商品:50"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/bzns_home_tv_goods_discount"
            app:layout_constraintTop_toTopOf="@id/bzns_home_tv_goods_state1" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bzns_home_constraint_order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/item_shape_fillet"
        android:layout_marginTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/bzns_home_constraint_goods"
        app:layout_constraintStart_toStartOf="@id/bzns_home_constraint_goods"
        app:layout_constraintEnd_toEndOf="@id/bzns_home_constraint_goods">

        <TextView
            android:id="@+id/bzns_home_tv_order_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单相关"
            android:textSize="17sp"
            android:textColor="@color/back_gray"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/bzns_home_tv_order_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单总数:100"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/bzns_home_tv_order_title"
            app:layout_constraintStart_toStartOf="@id/bzns_home_tv_order_title"/>

        <TextView
            android:id="@+id/bzns_home_tv_order_finished"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收款订单:100"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/bzns_home_tv_order_count"
            app:layout_constraintStart_toStartOf="@id/bzns_home_order_guideline"/>

        <TextView
            android:id="@+id/bzns_home_tv_order_not_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未支付订单:50"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/bzns_home_tv_order_count"
            app:layout_constraintStart_toStartOf="@id/bzns_home_tv_order_count"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bzns_home_order_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/bzns_home_tv_order_not_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未发货订单:50"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/bzns_home_tv_order_finished"
            app:layout_constraintTop_toTopOf="@id/bzns_home_tv_order_not_pay" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bzns_home_constraint_statistic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/item_shape_fillet"
        android:layout_marginTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/bzns_home_constraint_order"
        app:layout_constraintStart_toStartOf="@id/bzns_home_constraint_order"
        app:layout_constraintEnd_toEndOf="@id/bzns_home_constraint_order">

        <TextView
            android:id="@+id/bzns_home_tv_statistic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="统计相关"
            android:textSize="17sp"
            android:textColor="@color/back_gray"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/bzns_home_tv_statistic_finished"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已入账￥100"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/bzns_home_tv_statistic_title"
            app:layout_constraintStart_toStartOf="@id/bzns_home_tv_statistic_title"/>

        <TextView
            android:id="@+id/bzns_home_tv_statistic_not_finished"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未入账￥100"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/bzns_home_tv_statistic_finished"
            app:layout_constraintStart_toStartOf="@id/bzns_home_tv_statistic_finished"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>