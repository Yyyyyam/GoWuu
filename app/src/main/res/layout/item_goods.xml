<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/no_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/item_shape_fillet"
        android:layout_margin="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/itm_goods_img"
            app:round="10dp"
            android:layout_width="195dp"
            android:layout_height="195dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_launcher_foreground"/>

        <TextView
            android:id="@+id/itm_goods_tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已下架"
            android:textColor="@color/white"
            android:background="@color/back_gray"
            android:alpha="0.75"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/itm_goods_img"
            app:layout_constraintBottom_toBottomOf="@id/itm_goods_img"/>

        <TextView
            android:id="@+id/itm_goods_tv_discount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="-50%"
            android:textColor="@color/white"
            android:background="@color/orange"
            android:alpha="0.75"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            app:layout_constraintBottom_toBottomOf="@id/itm_goods_img"
            app:layout_constraintEnd_toEndOf="@id/itm_goods_img"/>

        <TextView
            android:id="@+id/itm_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="2dp"
            android:text="运动鞋-男-蓝黑哈哈哈哈哈哈哈哈哈哈哈哈"
            android:textColor="@color/goods_black"
            android:textSize="16sp"
            android:maxLength="12"
            app:layout_constraintStart_toStartOf="@+id/itm_goods_img"
            app:layout_constraintTop_toBottomOf="@+id/itm_goods_img" />

        <TextView
            android:id="@+id/itm_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="4dp"
            android:text="￥321"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/itm_goods_img"
            app:layout_constraintTop_toBottomOf="@+id/itm_goods_name" />

        <TextView
            android:id="@+id/itm_goods_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:text="已售出0件"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/itm_goods_img"
            app:layout_constraintTop_toBottomOf="@+id/itm_goods_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>