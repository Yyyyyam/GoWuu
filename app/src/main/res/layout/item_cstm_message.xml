<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <cn.edu.neusoft.ypq.gowuu.utils.ImageViewCircle
        android:id="@+id/itm_cstm_message_iv_icon"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_message"
        android:layout_marginStart="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itm_cstm_message_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通知类型"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/itm_cstm_message_iv_icon"
        app:layout_constraintStart_toEndOf="@+id/itm_cstm_message_iv_icon"/>

    <TextView
        android:id="@+id/itm_cstm_message_tv_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxEms="18"
        android:maxLines="1"
        android:textSize="15sp"
        android:text="请求成功，管理员通过了您的申请，点击查看详情"
        app:layout_constraintBottom_toBottomOf="@id/itm_cstm_message_iv_icon"
        app:layout_constraintStart_toStartOf="@id/itm_cstm_message_tv_type"/>

    <TextView
        android:id="@+id/itm_cstm_message_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="2021/12/17"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/itm_cstm_message_tv_type"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/background_gray"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/itm_cstm_message_tv_detail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/itm_cstm_message_tv_detail"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>