<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <cn.edu.neusoft.ypq.gowuu.utils.ImageViewCircle
        android:id="@+id/itm_admin_exm_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/circle_shape"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
        
    
    <TextView
        android:id="@+id/itm_admin_exm_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="二狗"
        android:textColor="@color/goods_black"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toTopOf="@id/itm_admin_exm_avatar"
        app:layout_constraintStart_toEndOf="@id/itm_admin_exm_avatar"/>
    
    <TextView
        android:id="@+id/itm_admin_exm_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2022/3/22 10:33"
        app:layout_constraintStart_toStartOf="@id/itm_admin_exm_tv_name"
        app:layout_constraintBottom_toBottomOf="@id/itm_admin_exm_avatar"/>

    <TextView
        android:id="@+id/itm_admin_exm_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商家申请"
        android:textColor="@color/orange"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/itm_admin_exm_tv_name"/>

    <TextView
        android:id="@+id/itm_admin_exm_tv_bzns_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="二狗的店"
        android:textSize="16sp"
        android:textColor="@color/goods_black"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/itm_admin_exm_avatar"
        app:layout_constraintStart_toStartOf="@id/itm_admin_exm_avatar"/>

    <TextView
        android:id="@+id/itm_admin_exm_tv_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="这是一个测试内容，显示的是用户申请信息、申请类别"
        android:textSize="16sp"
        android:textColor="@color/goods_black"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/itm_admin_exm_tv_bzns_name"
        app:layout_constraintStart_toStartOf="@id/itm_admin_exm_avatar"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <com.youth.banner.Banner
        android:id="@+id/itm_admin_exm_banner"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/itm_admin_exm_tv_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/itm_admin_exm_bt_refuse"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/item_shape_fillet_gray"
        android:text="拒绝"
        android:textColor="@color/gray"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/itm_admin_exm_banner"
        app:layout_constraintTop_toBottomOf="@id/itm_admin_exm_banner" />
    
    <Button
        android:id="@+id/itm_admin_exm_bt_agree"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="同意"
        android:textColor="@color/orange"
        android:background="@drawable/item_shape_fillet_orange"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/itm_admin_exm_banner"
        app:layout_constraintEnd_toEndOf="@id/itm_admin_exm_banner"/>

    <TextView
        android:id="@+id/itm_admin_exm_tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="已同意"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itm_admin_exm_banner" />

</androidx.constraintlayout.widget.ConstraintLayout>